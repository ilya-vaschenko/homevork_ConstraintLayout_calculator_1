<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/calculation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/screenHeight"
        android:textAlignment="textEnd"
        android:textColor="@color/DisplayColor"
        android:textSize="@dimen/displayTextSize"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="@dimen/screenHeight"
        android:textAlignment="textEnd"
        android:textColor="@color/DisplayColor"
        android:textSize="@dimen/displayTextSize"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculation" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/ac"
        android:layout_width="@dimen/buttonWidthAcDel"
        android:layout_height="@dimen/buttonHeightAcDel"
        android:layout_marginLeft="@dimen/leftMarginIndent"
        android:backgroundTint="@color/buttonColorAcDel"
        android:text="CLEAR"
        android:textColor="@color/colorAcDel"
        android:textSize="@dimen/textSizeAcDel"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result" />

    <com.google.android.material.button.MaterialButton
        style="@style/TexViewPrimary"
        android:id="@+id/del"
        android:layout_width="@dimen/buttonWidthAcDel"
        android:text="BACKSPACE"
        android:textColor="@color/colorAcDel"
        android:textSize="@dimen/textSizeAcDel"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/ac"
        app:layout_constraintTop_toTopOf="@+id/ac" />

    <com.google.android.material.button.MaterialButton
        style="@style/TexViewPrimary"
        android:id="@+id/btn7"
        android:layout_marginLeft="@dimen/leftMarginIndent"
        android:text="7"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/del" />

    <com.google.android.material.button.MaterialButton
        style="@style/TexViewPrimary"
        android:id="@+id/btn8"
        android:text="8"
        android:textSize="@dimen/textSize"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/btn7"
        app:layout_constraintTop_toTopOf="@id/btn7" />

    <com.google.android.material.button.MaterialButton
        style="@style/TexViewPrimary"
        android:id="@+id/btn9"
        android:text="9"
        android:textSize="@dimen/textSize"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/btn8"
        app:layout_constraintTop_toTopOf="@id/btn8" />

    <com.google.android.material.button.MaterialButton
        style="@style/TexViewPrimary"
        android:id="@+id/division"
        android:text="/"
        android:textColor="@color/colorMathematicalOperators"
        android:textSize="@dimen/textSize"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/btn9"
        app:layout_constraintTop_toTopOf="@id/btn9" />

    <com.google.android.material.button.MaterialButton
        style="@style/TexViewPrimary"
        android:id="@+id/btn4"

        android:text="4"
        android:textSize="@dimen/textSize"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/btn7"
        app:layout_constraintTop_toBottomOf="@id/btn7" />

    <com.google.android.material.button.MaterialButton
        style="@style/TexViewPrimary"
        android:id="@+id/btn5"
        android:text="5"
        android:textSize="@dimen/textSize"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btn4"
        app:layout_constraintTop_toTopOf="@id/btn4" />

    <com.google.android.material.button.MaterialButton
        style="@style/TexViewPrimary"
        android:id="@+id/btn6"
        android:text="6"
        android:textSize="@dimen/textSize"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btn5"
        app:layout_constraintTop_toTopOf="@+id/btn5" />

    <com.google.android.material.button.MaterialButton
        style="@style/TexViewPrimary"
        android:id="@+id/multiplication"
        android:text="*"
        android:textColor="@color/colorMathematicalOperators"
        android:textSize="@dimen/textSize"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/btn6"
        app:layout_constraintTop_toTopOf="@id/btn6" />

    <com.google.android.material.button.MaterialButton
        style="@style/TexViewPrimary"
        android:id="@+id/btn1"
        android:text="1"
        android:textSize="@dimen/textSize"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/btn4"
        app:layout_constraintTop_toBottomOf="@id/btn4" />

    <com.google.android.material.button.MaterialButton
        style="@style/TexViewPrimary"
        android:id="@+id/btn2"
        android:text="2"
        android:textSize="@dimen/textSize"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btn1"
        app:layout_constraintTop_toTopOf="@+id/btn1" />

    <com.google.android.material.button.MaterialButton
        style="@style/TexViewPrimary"
        android:id="@+id/btn3"
        android:text="3"
        android:textSize="@dimen/textSize"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btn2"
        app:layout_constraintTop_toTopOf="@+id/btn2" />


    <com.google.android.material.button.MaterialButton
        style="@style/TexViewPrimary"
        android:id="@+id/subtraction"
        android:text="-"
        android:textColor="@color/colorMathematicalOperators"
        android:textSize="@dimen/textSize"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/btn3"
        app:layout_constraintTop_toTopOf="@id/btn3" />

    <com.google.android.material.button.MaterialButton
        style="@style/TexViewPrimary"
        android:id="@+id/dot"
        android:text="."
        android:textColor="@color/colorMathematicalOperators"
        android:textSize="@dimen/textSize"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/btn1"
        app:layout_constraintTop_toBottomOf="@id/btn1" />

    <com.google.android.material.button.MaterialButton
        style="@style/TexViewPrimary"
        android:id="@+id/btn0"
        android:text="0"
        android:textSize="@dimen/textSize"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/dot"
        app:layout_constraintTop_toTopOf="@+id/dot" />

    <com.google.android.material.button.MaterialButton
        style="@style/TexViewPrimary"
        android:id="@+id/equally"
        android:text="="
        android:textColor="@color/colorMathematicalOperators"
        android:textSize="@dimen/textSize"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/btn0"
        app:layout_constraintTop_toTopOf="@id/btn0" />

    <com.google.android.material.button.MaterialButton
        style="@style/TexViewPrimary"
        android:id="@+id/addition"
        android:text="+"
        android:textColor="@color/colorMathematicalOperators"
        android:textSize="@dimen/textSize"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/equally"
        app:layout_constraintTop_toTopOf="@id/equally" />

</androidx.constraintlayout.widget.ConstraintLayout>